<Window x:Class="Walterlv.Whitman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walterlv.Whitman"
        xmlns:shell="clr-namespace:Walterlv.Whitman.Shell"
        mc:Ignorable="d" Title="Whitman" Width="800" Height="450"
        Background="#279EDA" Activated="OnActivated" Deactivated="OnDeactivated"
        MouseMove="OnMouseMove" Icon="App.ico">
    <shell:DwmAttribute.DwmAttribute>
        <shell:DwmAttribute BackgroundColor="#279EDA" />
    </shell:DwmAttribute.DwmAttribute>
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome GlassFrameThickness="0 64 0 0" NonClientFrameEdges="Left,Bottom,Right" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border Padding="0 1 0 0">
                            <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                                <Border VerticalAlignment="Top" Height="31">
                                    <TextBlock x:Name="TitleTextBlock"
                                               Foreground="White" Margin="16 0 156 0" VerticalAlignment="Center"
                                               FontSize="12" Text="{TemplateBinding Title}" />
                                </Border>
                                <AdornerDecorator>
                                    <ContentPresenter />
                                </AdornerDecorator>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="WindowState" Value="Maximized">
                                <Setter TargetName="RootGrid" Property="Margin" Value="6" />
                            </Trigger>
                            <Trigger Property="IsActive" Value="False">
                                <Setter TargetName="TitleTextBlock" Property="Foreground" Value="#7FFFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid x:Name="RootPanel">
        <Viewbox StretchDirection="DownOnly">
            <TextBlock x:Name="OutputTextBlock" Margin="64"
                       Text="walterlv.github.io" Foreground="#145587"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="Bold" FontSize="64" />
        </Viewbox>
        <Slider x:Name="WordCountSlider" Margin="16 8" VerticalAlignment="Bottom"
                Maximum="5" SmallChange="1" Value="0" TickPlacement="BottomRight"
                ValueChanged="WordCount_ValueChanged"
                IsMoveToPointEnabled="True" IsSnapToTickEnabled="True"
                AutoToolTipPlacement="BottomRight" />
    </Grid>
</Window>
