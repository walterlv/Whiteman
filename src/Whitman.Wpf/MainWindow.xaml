<Window x:Class="Walterlv.Whitman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Walterlv.Whitman"
        xmlns:shell="clr-namespace:Walterlv.Whitman.Shell"
        mc:Ignorable="d" Title="Whitman" Width="800" Height="450"
        Background="#279EDA" Activated="OnActivated" Deactivated="OnDeactivated"
        MouseMove="OnMouseMove" Icon="Properties/App.ico"
        Style="{StaticResource Style.Window.Universal}">
    <shell:DwmAttribute.DwmAttribute>
        <shell:DwmAttribute BackgroundColor="#279EDA" />
    </shell:DwmAttribute.DwmAttribute>
    <Grid x:Name="RootPanel">
        <Viewbox StretchDirection="DownOnly">
            <TextBlock x:Name="OutputTextBlock" Margin="64"
                       Text="Press Ctrl+, on any text box to type identifiers&#xD;
                       walterlv.github.io" Foreground="#145587"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="Bold" FontSize="64" />
        </Viewbox>
        <Slider x:Name="WordCountSlider" Margin="16 8" VerticalAlignment="Bottom"
                Maximum="5" SmallChange="1" Value="0" TickPlacement="BottomRight"
                ValueChanged="WordCount_ValueChanged"
                IsMoveToPointEnabled="True" IsSnapToTickEnabled="True"
                AutoToolTipPlacement="BottomRight" />
    </Grid>
</Window>
