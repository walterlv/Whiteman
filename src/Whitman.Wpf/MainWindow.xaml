<Window x:Class="Walterlv.Whitman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:XamlHost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        xmlns:local="clr-namespace:Walterlv.Whitman"
        xmlns:shell="clr-namespace:Walterlv.Whitman.Shell"
        xmlns:themes="clr-namespace:Walterlv.Whitman.Themes"
        mc:Ignorable="d" Title="Whitman" Width="1000" Height="640"
        Activated="OnActivated" Deactivated="OnDeactivated"
        Background="Transparent" Icon="Properties/App.ico"
        Style="{StaticResource Style.Window.Universal}"
        shell:WindowBlur.IsEnabled="True">
    <themes:UniversalWindowStyle.TitleBar>
        <themes:UniversalTitleBar ForegroundColor="White" InactiveForegroundColor="#A6BEC7"
                                  ButtonForegroundColor="Black" ButtonInactiveForegroundColor="#999999"
                                  ButtonHoverForeground="Black" ButtonHoverBackground="#E6E6E6"
                                  ButtonPressedForeground="Black" ButtonPressedBackground="#CCCCCC" />
    </themes:UniversalWindowStyle.TitleBar>
    <Grid x:Name="RootPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid x:Name="SidePanel" Background="#C0279EDA">
            <StackPanel VerticalAlignment="Center">
                <TextBlock TextAlignment="Center" Foreground="#80FFFFFF" Margin="16 4"
                           FontSize="16">
                    <Run Text="定制生成规则" />
                    <Run FontSize="12" Text="(魔性定制)" />
                </TextBlock>
                <local:WordOptionControl x:Name="WordOptionControl" Width="160" Height="160"
                                         WordOptionChanged="OnWordOptionChanged"/>
            </StackPanel>
            <TextBlock Margin="12 16" Foreground="#80FFFFFF" FontSize="14"
                       VerticalAlignment="Bottom" TextWrapping="WrapWithOverflow">
                <Run Text="随机生成" />
                <Run Text="{Binding MinWordCount, ElementName=WordOptionControl, FallbackValue=0}" />
                <Run Text="- " />
                <Run Text="{Binding MaxWordCount, ElementName=WordOptionControl, FallbackValue=0}" />
                <Run Text="个单词，每个单词" />
                <Run Text="{Binding MinSyllableCount, ElementName=WordOptionControl, FallbackValue=0}" />
                <Run Text="- " />
                <Run Text="{Binding MaxSyllableCount, ElementName=WordOptionControl, FallbackValue=0}" />
                <Run Text="个音节的标识符；但总音节数不超过" />
                <Run Text="{Binding MaxTotalSyllableCount, ElementName=WordOptionControl, FallbackValue=0}" />
                <Run Text="个。" />
            </TextBlock>
        </Grid>
        <Grid x:Name="ContentPanel" Grid.Column="1" Background="#F0FFFFFF">
            <Viewbox StretchDirection="DownOnly">
                <TextBlock x:Name="OutputTextBlock" Margin="64" TextAlignment="Center"
                           Text="在文本框中&#xD;按下 Ctrl+, 开始" Foreground="#145587"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="Bold" FontSize="64" />
            </Viewbox>
            <Border Width="24" Height="24" Margin="0 40 11 0" HorizontalAlignment="Right" VerticalAlignment="Top"
                    CornerRadius="16" BorderThickness="1" Background="Transparent"
                    MouseLeftButtonDown="HandledElement_MouseDown"
                    ToolTip="在任意文本框中按下 Ctrl+Shift+, 输入 PascalCase 规则的标识符&#xD;
在任意文本框中按下 Ctrl+, 输入 camelCase 规则的标识符">
                <TextBlock Text="&#xE897;" FontSize="10" FontFamily="Segoe MDL2 Assets"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="#CCCCCC" />
                        <Setter Property="TextBlock.Foreground" Value="#CCCCCC" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#999999" />
                                <Setter Property="TextBlock.Foreground" Value="#999999" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            <TextBlock Margin="0 16" TextAlignment="Center" Foreground="#A6BEC7"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       TextWrapping="WrapWithOverflow"
                       Text="walterlv.com" ToolTip="关于 吕毅"
                       MouseEnter="AboutLink_MouseEnter" MouseLeave="AboutLink_MouseLeave"
                       MouseLeftButtonDown="HandledElement_MouseDown" MouseLeftButtonUp="AboutLink_MouseUp">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextDecorations" Value="Underline" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
